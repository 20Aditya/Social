html 
  head
    title Profile
    link(href='/bower_components/bootstrap/dist/css/bootstrap.css' rel='stylesheet' type='text/css')
    link(href='/css/style.css' rel='stylesheet' type='text/css')
    link#bootstrap-css(href='//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css' rel='stylesheet')
    
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark 
      
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          if user
            li.nav-item.active
              a.nav-link(href='/')
                | Home 
                span.sr-only (current)
  
        ul.nav.navbar-nav.navbar-right
          if user
            li.nav-item.active 
              a.nav-link(href='/logout') 
                | Logout 
                span.sr-only(current)
          else
            li.nav-item.active
              a.nav-link(href='/register')
                | SignUp  
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='/login')
                | Login 
                span.sr-only (current)  
    .container
      .row
        .col-sm-2.col-md-2
          img.img-rounded.img-responsive(src='http://thetransformedmale.files.wordpress.com/2011/06/bruce-wayne-armani.jpg' alt='')
        .col-sm-4.col-md-4
          blockquote
            p #{name}
          p
            i.glyphicon.glyphicon-envelope
            |  #{email}
            br
            i.glyphicon.glyphicon-globe
            |  www.bootsnipp.com
            br
            i.glyphicon.glyphicon-gift
            |  January 30, 1974

      
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
    
